<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/myCoordinator"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent" android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_above="@+id/bottom_bar"/>

    <LinearLayout
        android:id="@+id/left_floatmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_above="@+id/bottom_bar"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">

        <!--<ImageView-->
            <!--android:id="@+id/btn_maptrack"-->
            <!--android:layout_width="40dp"-->
            <!--android:layout_height="40dp"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--android:src="@mipmap/ic_target"-->
            <!--android:background="@color/colorFloatButton"/>-->

        <ImageView
            android:id="@+id/btn_mapplus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_plus"
            android:background="@color/colorFloatButton"/>
        <ImageView
            android:id="@+id/btn_mapminus"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_minus"
            android:background="@color/colorFloatButton"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/right_floatmenu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_above="@+id/bottom_bar"
        android:layout_alignParentRight="true"
        android:orientation="vertical"
        android:layout_marginBottom="20dp">
        <ImageView
            android:id="@+id/btn_inbox"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/ic_email"
            android:background="@color/colorFloatButton"/>

        <Button
            android:id="@+id/btn_inboxcount"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:text="0"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/colorYellow"
            android:background="@color/colorSignup"/>

        <ImageView
            android:id="@+id/btn_geocenter"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_track"
            android:adjustViewBounds="false"
            android:background="@color/colorFloatButton"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBottomBar">
        <ImageView
            android:id="@+id/btn_bottom_social"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:src="@mipmap/ic_social"
            android:adjustViewBounds="false"/>
        <ImageView
            android:id="@+id/btn_bottom_venue"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:src="@mipmap/ic_venue"
            android:adjustViewBounds="false"/>
        <ImageView
            android:id="@+id/btn_bottom_connect"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:src="@mipmap/ic_connect"
            android:adjustViewBounds="false"/>
        <ImageView
            android:id="@+id/btn_bottom_chat"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:src="@mipmap/ic_chat"
            android:adjustViewBounds="false"/>
        <ImageView
            android:id="@+id/btn_bottom_setting"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="0.25"
            android:src="@mipmap/ic_settings"
            android:adjustViewBounds="false"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/topbar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="10dp">

        <ImageView
            android:id="@+id/btn_heart"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@+id/btn_mapplus"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="10dp"
            android:src="@mipmap/ic_heart"
            android:background="@color/colorHeart"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@color/white">
            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/ic_search"/>
            <AutoCompleteTextView
                android:id="@+id/search_view"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/white"
                android:hint="@string/text_search"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_user_score"
            android:layout_width="46dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textColor="@color/colorSignin"
            android:background="@color/colorYellow"
            android:layout_gravity="center_vertical"/>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/main_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_bar"/>
</RelativeLayout>
