<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="pf.paranoidfan.com.paranoidfan.CreatePinFragment"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">
        <ImageView
            android:id="@+id/img_pin"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginTop="70dp"/>
        <TextView
            android:id="@+id/txt_pintitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Title"
            android:textColor="@android:color/black"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center">
            <ImageView
                android:id="@+id/rating1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_star_empty"/>
            <ImageView
                android:id="@+id/rating2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_star_empty"/>
            <ImageView
                android:id="@+id/rating3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_star_empty"/>
            <ImageView
                android:id="@+id/rating4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:src="@mipmap/ic_star_empty"/>
            <ImageView
                android:id="@+id/rating5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_star_empty"/>
        </LinearLayout>
        <EditText
            android:id="@+id/edittxt_pintitle"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="13sp"
            android:hint="Title"/>
        <EditText
            android:id="@+id/edittxt_pinteam"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:textSize="13sp"
            android:hint="Teams (optional)"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <AutoCompleteTextView
                android:id="@+id/autotext_location"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".5"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:hint="Current Location"
                android:textAlignment="center"
                android:background="@color/colorGreyBack"
                />
            <Button
                android:id="@+id/btn_datatime"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_weight=".5"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="Now"
                android:background="@color/colorGreyBack"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorLightGrey"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
            <Button
                android:id="@+id/btn_camera"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="20dp"
                android:background="@mipmap/ic_camera"
                />
            <EditText
                android:id="@+id/edittext_comment"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:hint="Comments (optional)"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:text="Tell Your Friends"
            android:textSize="13sp"
            android:textColor="@color/colorDarkGrey"
            android:textStyle="bold"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_facebook"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight=".3"
                android:layout_marginLeft="5dp"
                android:text="Facebook"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"/>
            <Button
                android:id="@+id/btn_twitter"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight=".3"
                android:layout_marginLeft="5dp"
                android:text="Twitter"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"/>
            <Button
                android:id="@+id/btn_invite"
                android:layout_width="0dp"
                android:layout_height="38dp"
                android:layout_weight=".3"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="Invite"
                android:textSize="13sp"
                android:textColor="@color/colorWhite"
                android:background="@color/colorDarkGrey"/>
        </LinearLayout>
        <Button
            android:id="@+id/btn_submit"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_margin="5dp"
            android:text="Submit"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:background="@color/colorSignin"/>
    </LinearLayout>
</FrameLayout>
