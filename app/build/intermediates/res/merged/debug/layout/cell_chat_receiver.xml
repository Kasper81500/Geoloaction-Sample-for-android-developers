<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/relative_receiver"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_profile1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <ImageView
                android:id="@+id/img_profile1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/menu_profile"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:layout_marginLeft="10dp">
                <TextView
                    android:id="@+id/txt_message1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Hi Guys! good moring Hi Guys! good moring Hi Guys! good moring Hi Guys! good moring Hi Guys! good moring Hi Guys! good moring"
                    android:textColor="@color/white"
                    android:background="@drawable/rounded_receiver_corner"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/img_stick1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:scaleType="fitXY"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_message_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_profile1"
            android:layout_marginLeft="45dp"
            android:text="One month ago"
            android:textSize="8sp" />
        <RelativeLayout
            android:id="@+id/relative_multimedia1"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/txt_message_date1">
            <com.longtailvideo.jwplayer.JWPlayerView
                android:id="@+id/view_video1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/img_photo1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:background="@color/white"
                />
            <ImageView
                android:id="@+id/img_play1"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_videoplay"/>
        </RelativeLayout>
        <TextView
            android:id="@+id/txt_image_date1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_multimedia1"
            android:layout_marginLeft="5dp"
            android:text="One month ago"
            android:textSize="8sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/relative_sender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:id="@+id/layout_profile2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".6"
                android:layout_marginRight="10dp">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <TextView
                    android:id="@+id/txt_message2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="Hi Guys! good moring Hi Guys! good moring Hi Guys! good moring Hi Guys! good moring Hi Guys! good moring Hi Guys! good moring"
                    android:textColor="@color/white"
                    android:textAlignment="textEnd"
                    android:background="@drawable/rounded_corner"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/img_profile2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:scaleType="fitXY"
                android:src="@mipmap/menu_profile"
                />
        </LinearLayout>
        <ImageView
            android:id="@+id/img_stick2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:visibility="gone"/>
        <TextView
            android:id="@+id/txt_message_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_profile2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:text="One month ago"
            android:textSize="8sp" />
        <RelativeLayout
            android:id="@+id/relative_multimedia2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txt_message_date2">
            <com.longtailvideo.jwplayer.JWPlayerView
                android:id="@+id/view_video2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/img_photo2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:layout_margin="5dp"
                android:scaleType="fitXY"
                android:background="@color/white"/>
            <ImageView
                android:id="@+id/img_play2"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/ic_videoplay"/>
        </RelativeLayout>

        <TextView
            android:id="@+id/txt_image_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relative_multimedia2"
            android:layout_alignParentRight="true"
            android:layout_marginRight="5dp"
            android:text="One month ago"
            android:textSize="8sp" />
    </RelativeLayout>

</RelativeLayout><!-- From: file:/E:/2015_work/MainTask/ParanoidAndroidBitBucket/app/src/main/res/layout/cell_chat_receiver.xml -->